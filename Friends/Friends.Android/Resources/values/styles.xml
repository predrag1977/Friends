<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">false</item>

        <!-- Light status bar icons (dark text on light background) -->
        <item name="android:windowLightStatusBar">true</item>

        <!-- Layout in full screen with safe inset handling -->
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="FriendDetailsActivityTheme" parent="AppTheme">
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:statusBarColor">@color/colorSecondary</item>
    </style>
</resources>

